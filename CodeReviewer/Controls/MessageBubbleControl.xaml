<UserControl x:Class="CodeReviewer.Controls.MessageBubbleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CodeReviewer.Controls"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance local:MessageBubbleControl}">
    <Border 
        Name="MessageBubble"
        Margin="8,8" 
        Padding="4,4"
        Background="DarkSlateGray"
        CornerRadius="4">
        <TextBlock TextWrapping="Wrap" Text="{Binding MessageBubbleModel.Message}" />
    </Border>
</UserControl>
